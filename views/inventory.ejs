<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Quản lý tồn kho - Cửa hàng 24h</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/webfonts/fa-solid-900.woff2"
    as="font" type="font/woff2" crossorigin>
  <style>
    body {
      min-height: 100vh;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      font-family: 'Segoe UI', sans-serif;
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 280px;
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(10px);
      color: white;
      padding-top: 2rem;
      z-index: 1000;
      transition: all 0.3s;
    }

    .sidebar .logo {
      text-align: center;
      margin-bottom: 3rem;
      font-size: 1.8rem;
      font-weight: 700;
      cursor: pointer;
      transition: opacity 0.3s;
    }

    .sidebar .logo:hover {
      opacity: 0.8;
    }

    .sidebar .nav-link {
      color: rgba(255, 255, 255, 0.8);
      padding: 0.9rem 1.5rem;
      border-radius: 0 50px 50px 0;
      margin: 0.3rem 1rem;
      transition: all 0.3s;
      display: flex;
      align-items: center;
    }

    .sidebar .nav-link i {
      font-size: 1.3rem;
      min-width: 40px;
      text-align: center;
    }

    .sidebar .nav-link:hover {
      background: rgba(255, 255, 255, 0.2);
      color: white;
      margin-left: 0.5rem;
    }

    .sidebar .nav-link.active {
      background: rgba(255, 255, 255, 0.3) !important;
      color: white !important;
      margin-left: 0.5rem;
      font-weight: 600;
      border-left: 4px solid #fff;
    }

    .content {
      margin-left: 280px;
      padding: 2rem;
      min-height: 100vh;
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 20px;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
      backdrop-filter: blur(10px);
      padding: 2.5rem;
    }

    .page-title {
      color: #667eea;
      font-weight: 700;
      font-size: 2rem;
    }

    #productTable tr {
      cursor: pointer;
      transition: background 0.3s;
    }

    #productTable tr:hover {
      background: #f8f9fa;
    }

    #addNewProductForm {
      display: none;
    }

    @media (max-width: 992px) {
      .sidebar {
        width: 80px;
      }

      .sidebar .logo span,
      .sidebar .nav-text {
        display: none;
      }

      .sidebar .nav-link {
        padding: 1rem 0;
        justify-content: center;
        margin: 0.5rem auto;
        border-radius: 50%;
      }

      .sidebar .nav-link i {
        font-size: 1.5rem;
      }

      .sidebar .nav-link:hover,
      .sidebar .nav-link.active {
        margin-left: 0;
        border-left: none;
      }

      .content {
        margin-left: 80px;
      }
    }
  </style>
</head>

<body>
  <div id="pageLoader"
    style="position:fixed;top:0;left:0;width:100%;height:100%;background:rgba(102,87,163,0.95);z-index:9999;display:flex;align-items:center;justify-content:center;opacity:1;transition:opacity 0.5s;">
    <div class="text-center">
      <i class="fas fa-store-alt fa-4x text-white mb-4"></i>
      <h4 class="text-white mb-3">Cửa hàng 24h</h4>
      <div class="spinner-border text-white" style="width:4rem;height:4rem;" role="status"></div>
    </div>
  </div>

  <div class="sidebar">
    <div class="logo" onclick="window.location.href='/dashboard'">
      <i class="fas fa-store-alt fa-2x"></i><span> 24H Store</span>
    </div>
    <nav class="nav flex-column">
      <a class="nav-link" href="/dashboard"><i class="fas fa-home fa-lg"></i><span class="nav-text"> Trang
          chủ</span></a>
      <a class="nav-link" href="/products"><i class="fas fa-box fa-lg"></i><span class="nav-text">Sản phẩm</span></a>
      <a class="nav-link active" href="/inventory"><i class="fas fa-warehouse fa-lg"></i><span class="nav-text">Tồn
          kho</span></a>
      <% if (typeof role !=='undefined' && role==='admin' ) { %>
        <a class="nav-link" href="/employees"><i class="fas fa-users-cog fa-lg"></i><span class="nav-text">Nhân
            viên</span></a>
        <% } %>
          <a class="nav-link" href="/sales"><i class="fas fa-cash-register fa-lg"></i><span class="nav-text">Bán
              hàng</span></a>
          <a class="nav-link" href="/reports"><i class="fas fa-chart-bar fa-lg"></i><span class="nav-text">Báo
              cáo</span></a>
          <hr class="my-4 opacity-50">
          <a class="nav-link text-danger" href="/"><i class="fas fa-sign-out-alt fa-lg"></i><span class="nav-text">Đăng
              xuất</span></a>
    </nav>
  </div>

  <div class="content">
    <div class="glass-card">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title"><i class="fas fa-warehouse me-3"></i>Quản lý tồn kho</h2>
        <div class="text-end">
          <span class="badge bg-primary fs-5 px-4 py-2">
            <%= typeof username !=='undefined' ? username : 'Guest' %>
          </span>
          <small class="d-block text-muted fw-bold">
            <%= typeof role !=='undefined' ? role.toUpperCase() : 'STAFF' %>
          </small>
        </div>
      </div>

      <% if (typeof lowStock !=='undefined' && lowStock && lowStock.length> 0) { %>
        <div class="alert alert-danger mb-4">
          <i class="fas fa-bell me-2"></i><strong>Sắp hết hàng:</strong>
          <% lowStock.forEach(p=> { %> <%= p.name %> (còn <%= p.stock %>), <% }) %>
                  Hãy nhập hàng ngay!
        </div>
        <% } else { %>
          <div class="alert alert-success mb-4">
            <i class="fas fa-check-circle me-2"></i> Tất cả sản phẩm đều đủ hàng!
          </div>
          <% } %>

            <!-- Danh mục sản phẩm -->
            <h4 class="mt-5"><i class="fas fa-boxes me-2"></i>Danh mục sản phẩm</h4>
            <div class="table-responsive">
              <table class="table table-striped table-hover" id="productTable">
                <thead class="table-primary">
                  <tr>
                    <th>ID</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Tồn kho</th>
                    <th>Nhà cung cấp</th>
                    <th>Hành động</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (typeof products !=='undefined' && products && products.length> 0) { %>
                    <% products.forEach(p=> { %>
                      <tr>
                        <td>
                          <%= p.id %>
                        </td>
                        <td><strong>
                            <%= p.name %>
                          </strong></td>
                        <td>
                          <%= Number(p.price).toLocaleString('vi-VN') %> VNĐ
                        </td>
                        <td><span class="badge <%= p.stock < 10 ? 'bg-danger' : 'bg-success' %>">
                            <%= p.stock %>
                          </span></td>
                        <td>
                          <%= p.supplier || '-' %>
                        </td>
                        <td>
                          <button class="btn btn-sm btn-success"
                            onclick="showImportForm(<%= p.id %>, '<%= p.name %>')"><i class="fas fa-plus me-1"></i>Nhập
                            hàng</button>
                        </td>
                      </tr>
                      <% }) %>
                        <% } else { %>
                          <tr>
                            <td colspan="6" class="text-center text-muted">Chưa có sản phẩm</td>
                          </tr>
                          <% } %>
                </tbody>
              </table>
            </div>

            <!-- Form nhập hàng cũ -->
            <div id="importForm" class="mt-4" style="display: none;">
              <h5><i class="fas fa-box-open me-2"></i>Nhập hàng cho sản phẩm: <span id="productName"></span></h5>
              <form action="/inventory/in" method="POST" class="row g-3">
                <input type="hidden" name="product_id" id="productIdInput">
                <div class="col-md-3">
                  <label class="form-label">Số lượng nhập</label>
                  <input type="number" name="quantity" class="form-control" min="1" required>
                </div>
                <div class="col-md-6">
                  <label class="form-label">Ghi chú (tùy chọn)</label>
                  <input type="text" name="note" class="form-control" placeholder="Nhập từ nhà cung cấp nào...">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                  <button type="submit" class="btn btn-primary w-100"><i class="fas fa-arrow-up me-2"></i>Nhập
                    kho</button>
                </div>
              </form>
            </div>

            <!-- Form nhập nguồn hàng mới -->
            <div class="mt-5">
              <h4><i class="fas fa-plus-square me-2"></i>Nhập nguồn hàng mới (thêm sản phẩm)</h4>
              <form action="/products/add" method="POST" class="row g-3">
                <div class="col-md-3">
                  <label class="form-label">Tên sản phẩm</label>
                  <input type="text" name="name" class="form-control" required>
                </div>
                <div class="col-md-2">
                  <label class="form-label">Giá</label>
                  <input type="number" name="price" class="form-control" required>
                </div>
                <div class="col-md-2">
                  <label class="form-label">Tồn kho ban đầu</label>
                  <input type="number" name="stock" class="form-control" min="1" required>
                </div>
                <div class="col-md-3">
                  <label class="form-label">Nhà cung cấp</label>
                  <input type="text" name="supplier" class="form-control">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                  <button type="submit" class="btn btn-success w-100"><i class="fas fa-plus me-2"></i>Thêm mới</button>
                </div>
              </form>
            </div>

            <h4 class="mt-5"><i class="fas fa-history me-2"></i>Lịch sử nhập/xuất kho (50 gần nhất)</h4>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead class="table-primary">
                  <tr>
                    <th>Ngày giờ</th>
                    <th>Sản phẩm ID</th>
                    <th>Hành động</th>
                    <th>Số lượng</th>
                    <th>Ghi chú</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (typeof logs !=='undefined' && logs && logs.length> 0) { %>
                    <% logs.forEach(l=> { %>
                      <tr>
                        <td>
                          <%= new Date(l.date).toLocaleString('vi-VN') %>
                        </td>
                        <td>
                          <%= l.product_id %>
                        </td>
                        <td><span class="badge <%= l.action === 'in' ? 'bg-success' : 'bg-warning' %>">
                            <%= l.action==='in' ? 'Nhập kho' : 'Xuất kho' %>
                          </span></td>
                        <td>
                          <%= l.quantity %>
                        </td>
                        <td>
                          <%= l.note || '-' %>
                        </td>
                      </tr>
                      <% }) %>
                        <% } else { %>
                          <tr>
                            <td colspan="5" class="text-center text-muted">Chưa có lịch sử</td>
                          </tr>
                          <% } %>
                </tbody>
              </table>
            </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const currentPath = window.location.pathname;
      document.querySelectorAll('.sidebar .nav-link').forEach(link => {
        link.classList.remove('active');
        if (link.getAttribute('href') === currentPath) {
          link.classList.add('active');
        }
      });
      document.body.style.opacity = '1';
    });

    window.addEventListener('load', function () {
      const loader = document.getElementById('pageLoader');
      loader.style.opacity = '0';
      setTimeout(() => loader.style.display = 'none', 500);
    });

    //hiển thị form nhập hàng cũ
    function showImportForm(productId, productName) {
      document.getElementById('importForm').style.display = 'block';
      document.getElementById('productName').textContent = productName;
      document.getElementById('productIdInput').value = productId;
    }
  </script>
</body>

</html>